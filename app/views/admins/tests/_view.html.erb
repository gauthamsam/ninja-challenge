<% if @tests.size > 0 %>
<div style="margin-bottom: 0px; margin-top: -45px"> 
<div style="float: left"><h4>Tests created:</h4></div>
<div style="float: right"><%= paginate @tests %></div>
<div style="clear: both"></div>
</div>
<table border="1">
  <tr>
    <th width="200px">Test Name</th>
    <th width="200px">Start Date</th>
    <th width="200px">End Date</th>
    <th width="200px">Max Score</th>
    <th width="200px">Level</th>
    <th width="200px"></th>
    <th width="100px"></th>
    <th width="100px"></th>
  </tr>

<% @tests.each do |test| %>
  <tr>
    <td width="200px"><%= test.name %></td>
    <td width="200px"><%= test.start_date %></td>
    <td width="200px"><%= test.end_date %></td>
    <td width="200px"><%= test.max_score %></td>
    <td width="200px"><%= test.level_id %></td>
    <td width="200px"><a href="/admins/show_question?test_id=<%=test.id%>">Add Questions</a></td>
    <td width="200px"><a href="/admins/view_all_questions?test_id=<%=test.id%>">Preview Questions</a></td>
    <td width="100px"><%= link_to 'Edit', '' %></td>
    <td width="100px"><%= link_to 'Delete', test, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<div style="float: right;"><%= paginate @tests %></div>
<div style="clear: both"></div>
<% else %>
<p>There are no tests to view. You may create one by clicking 'Create Test'.</p>
<% end %>
