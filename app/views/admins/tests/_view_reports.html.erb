<style type="text/css">
	.nc_table {
		font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
		width: 70%;
		border-collapse: collapse;
	}
	.nc_table td, .nc_table th {
		font-size: 1em;
		border: 1px solid #2E2E2E;
		padding: 3px 7px 2px 7px;
		width: auto
	}
	.nc_table th {
		font-size: 1.1em;
		text-align: center;
		padding-top: 5px;
		padding-bottom: 4px;
		background-color: #777777;
		color: #000000;
	}

</style>
<% if @tests.size > 0 %>
<div style="margin-bottom: 0px; margin-top: -45px">
	<div style="float: left">
		<h4>You can view/download the reports here.</h4><br/>
	</div>
	<div style="float: right">
		<%= paginate @tests %>
	</div>
	<div style="clear: both"></div>
</div>

<table class="nc_table">
	<tr>
		<th>Test</th>
		<th colspan="2">Report</th>
	</tr>
	<% @tests.each do |test| %>
	<tr>	
	<td><%= test.name %></td>
	<td><a href="/admins/view_report?test_id=<%= test.id%>" target="_blank">View</a></td>
	<td><%= link_to "Download", {:controller => "admins", :action => "view_report", :test_id => test.id, :format => "pdf"} %></td>
	</tr>
	<% end %>
</table>
<div style="float: right;">
	<%= paginate @tests %>
</div>
<div style="clear: both"></div>
<% else %>
<p>
	There are no test reports to view.
</p>
<% end %>
