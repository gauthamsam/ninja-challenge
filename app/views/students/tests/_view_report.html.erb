<style type="text/css">
	#reports {
		font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
		width: 100%;
		border-collapse: collapse;
	}
	#reports td, #reports th {
		font-size: 1em;
		border: 1px solid #2E2E2E;
		padding: 3px 7px 2px 7px;
	}
	#reports th {
		font-size: 1.1em;
		text-align: left;
		padding-top: 5px;
		padding-bottom: 4px;
		background-color: #777777;
		color: #000000;
	}
	#reports tr.alt td {
		color: #000000;
		background-color: #F6D8CE;
	}

</style>

<div style="margin-bottom: 0px; margin-top: -45px"></div>

<% if @student_submitted == true %>
	
	
	<% if @questions.size > 0 %>
	<h3>Report card for <%=@test.name%></h3>
	<h4>Total Score: <%= @student_test.first.student_score %></h4>
	<table id="reports">
	<tr>
  		<th width="1200px">Question </th>
  		<th width="200px">Score</th>
  		<th width="200px">Correct Choice</th>
  		<th width="200px">Your Choice</th>
  		<th width="200px">Your Score</th>
	</tr>

	<% @questions.each_with_index do |question, question_number| %>
		<% if @student_test_question.where(:question_id => question.id).first %>
		<tr>
		 <td><%= question.content%></td>
		 <td><%= question.score%></td>
		 <td><%= question.correct_choice%></td>
		 <td><%= @student_test_question.where(:question_id => question.id).first.student_choice %></td>
		 <td><%= @student_test_question.where(:question_id => question.id).first.student_score %></td>
		</tr>
		<% else %>
		<tr class="alt">		 
		 <td><%= question.content%></td>
		 <td><%= question.score%></td>
		 <td><%= question.correct_choice%></td>
		 <td> None </td>
		 <td> 0 </td>
		</tr>
		<% end %>
	<% end %>

	</table>
	
	<br/>
	<h4> Score comparison </h4>
	<div id="chart_holder" align="center">
	<%= image_tag @bar_chart %>
	</div>
	
	<% else %>
		No questions in this test
	<% end %>
	</table>
	
	
	
<% else %>
 You have not submitted this test 

<% end %>
